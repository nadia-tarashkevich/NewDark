<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>NewDark</id>
    <version>1.0.0</version>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>New Dark Color Scheme</name>
    <category>UI</category>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor email="support@jetbrains.com" url="https://www.jetbrains.com">JetBrains</vendor>

    <idea-version since-build="231" until-build="242.*"/>

    <!-- TODO: After 2024.2, probably needs to change parent theme: ExperimentalDark->Dark -->
    <description><![CDATA[
New Dark is intermediate color scheme, introduced in 2022.1 and removed in 2023.1
This plugin brings back this theme and can be used with versions 2023.1 - 2024.2.
<br>
Notable differences with "Dark" color scheme: blue color for keywords.
<br>
After the installation, go to "Settings | Editor | Color Scheme" and select "New Dark" to apply.
  ]]></description>

    <!-- Short summary of new features and bugfixes in the latest plugin version.
         Displayed on the Plugin Page and IDE Plugin Manager. Simple HTML elements can be included between <![CDATA[  ]]> tags. -->
    <change-notes><![CDATA[
    Initial release of the theme.
  ]]></change-notes>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <bundledColorScheme path="/colors/NewDark.xml"/>
        <themeProvider id="NewDark" path="/theme/NewDark.theme.json"/>
    </extensions>
</idea-plugin>